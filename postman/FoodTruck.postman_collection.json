  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Mariam\",\n  \"email\": \"mariam@test.com\",\n  \"password\": \"1234\",\n  \"role\": \"customer\"\n}"
            },
            "url": "http://localhost:3000/api/v1/auth/signup"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"mariam@test.com\",\n  \"password\": \"1234\"\n}"
            },
            "url": "http://localhost:3000/api/v1/auth/login"
          }
        }
      ]
    },
    {
      "name": "Trucks",
      "item": [
        {
          "name": "View All Trucks",
          "request": {"method": "GET", "url": "http://localhost:3000/api/v1/trucks/view"}
        },
        {
          "name": "View My Truck (Owner)",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer {{token}}"}],
            "url": "http://localhost:3000/api/v1/trucks/myTruck"
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer {{token}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{ \"orderStatus\": \"unavailable\" }"
            },
            "url": "http://localhost:3000/api/v1/trucks/updateOrderStatus"
          }
        }
      ]
    },
    {
